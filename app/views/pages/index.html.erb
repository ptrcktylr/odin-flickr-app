<h1 class="title">View Photos</h1>

<%= form_with url:'pages', method: :get, local: true do |f| %>
  <%= text_field_tag :user_id, nil, required: true, placeholder: "Enter Flickr User ID" %>
  <%= submit_tag "View Photos" %>
<% end %>

<% if @photo_links %>
  <ul>
    <% @photo_links.each do |photo_link| %>
      <li><%= image_tag photo_link, height: "300" %></li>
    <% end %>
  </ul>
<% else %>
  <p>No photos found!</p>
<% end %>